<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
    <!-- 通过UserModel的默认构造方法创建UserModel对象 -->
    <bean id="createBeanByConstructor1"
          class="com.lzy.springcode.lesson001.demo3.User"/>
    <!-- 通过UserModel有参构造方法创建UserModel对象 -->
    <bean id="createBeanByConstructor2"
          class="com.lzy.springcode.lesson001.demo3.User">
        <constructor-arg index="0" value="我是通过UserModel的有参方法构造的对象!"/>
        <constructor-arg index="1" value="30"/>
    </bean>
</beans>